<!DOCTYPE html>
<html>
  <head>
    <title>SocialRecipes</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <% if flash[:error] %>
        <%= flash[:error]  %>
      <% end %>
      <% if flash[:notice] %>
        <%= flash[:notice]  %>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
